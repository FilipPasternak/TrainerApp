<StartPage>

    MDGridLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: .9, .5
        rows: 2
        cols: 2
        spacing: dp(10)
        MDRectangleFlatButton:
            text: 'Diet Page'
            font_size: 20
            size_hint: 0.8, 0.2
            height: dp(80)
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            on_release: root.go_to_diet_page()
        MDRectangleFlatButton:
            text: 'Training Plan Page'
            font_size: 20
            size_hint: 0.8, 0.2
            height: dp(80)
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            on_release: root.go_to_training_plan_page()
        MDRectangleFlatButton:
            text: 'Settings'
            font_size: 20
            size_hint: 0.8, 0.2
            height: dp(80)
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            on_release: root.go_to_settings_page()
        MDRectangleFlatButton:
            text: 'Cos tu bedzie'
            font_size: 20
            size_hint: 0.8, 0.2
            height: dp(80)
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
