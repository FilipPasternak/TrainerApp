<UserGoalPage>


    MDAnchorLayout:
        anchor_y: 'top'

        MDBoxLayout:
            id: content_container
            orientation: 'vertical'
            spacing: dp(20)
            padding: dp(20)
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'center_x': 0.5}

            MDRaisedButton:
                id: exp
                text: 'Your experience'
                size_hint: None, None
                font_size: 20
                width: dp(200)
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                on_release: root.exp.open()

            MDRaisedButton:
                id: goal
                text: 'Your goal'
                size_hint: None, None
                font_size: 20
                width: dp(200)
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                on_release: root.goal.open()

            MDRaisedButton:
                id: intensity
                text: 'Training intensity'
                size_hint: None, None
                font_size: 20
                width: dp(200)
                height: dp(50)
                pos_hint: {'center_x': 0.5}
                on_release: root.intensity.open()

            MDLabel:
                text: 'Choose your training schedule:'
                font_size: 20
                padding: 50
                width: dp(200)
                height: dp(100)
                pos_hint: {'center_x': 0.5}

            GridLayout:
                id: grid
                cols: 4
                rows: 2
                spacing: dp(10)
                size_hint_y: None
                height: self.minimum_height

    MDRectangleFlatButton:
        text: 'Proceed'
        size_hint: None, None
        font_size: 20
        width: dp(200)
        height: dp(50)
        pos_hint: {'center_x': 0.5, 'center_y': .1}
        on_release: root.proceed()