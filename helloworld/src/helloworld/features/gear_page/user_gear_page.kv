<UserGearPage>

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(20)

        MDAnchorLayout:
            anchor_y: 'top'

            MDScrollView:
                size_hint: 1, 1
                bar_width: dp(10)

                MDBoxLayout:
                    id: Switches
                    orientation: 'vertical'
                    spacing: dp(10)
                    padding: dp(20)
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {'center_x': 0.5}

        MDSeparator:

        MDRectangleFlatButton:
            text: 'Proceed'
            size_hint: None, None
            font_size: 20
            width: dp(200)
            height: dp(50)
            pos_hint: {'center_x': 0.5}
            on_release: root.proceed()
