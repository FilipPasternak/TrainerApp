<UserPlacePage>

    MDBoxLayout:
        orientation: 'vertical'
        padding: [0, dp(20), 0, dp(50)]

        MDAnchorLayout:
            anchor_y: 'top'

            MDBoxLayout:
                id: content_container
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(20)
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {'center_x': 0.5}


        MDRaisedButton:
            text: 'Proceed'
            size_hint: None, None
            font_size: 20
            width: dp(200)
            height: dp(50)
            pos_hint: {'center_x': 0.5}
            on_release: root.proceed()



